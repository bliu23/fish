{
  "name": "fish",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && tsc",
    "dev": "npm run start:watch",
    "lint": "eslint --fix './src/**/*.ts'",
    "start": "npm run build && npm run start:only",
    "start:only": "node lib/main/server.js",
    "start:watch": "nodemon -e ts --exec \"npm run build && node lib/main/server.js || exit 1\"",
    "test": "npm run build && nyc npm run test:only --",
    "test:only": "mocha './lib/tests'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bliu23/fish.git"
  },
  "author": "Brandon Liu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bliu23/fish/issues"
  },
  "homepage": "https://github.com/bliu23/fish#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.1",
    "@types/sinon": "^9.0.4",
    "@types/socket.io": "^2.1.10",
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "nodemonConfigs": {
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "watch": [
      "src"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "extensions": [
      ".ts"
    ],
    "branches": 70,
    "lines": 70,
    "functions": 70,
    "statements": 70
  }
}
